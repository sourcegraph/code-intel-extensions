{
  "extends": "@sourcegraph/tsconfig",
  "references": [
    { "path": "extensions/go" },
    { "path": "extensions/template" },
    { "path": "extensions/typescript" }
  ],
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["esnext", "webworker"],
    "composite": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true
  }
}
