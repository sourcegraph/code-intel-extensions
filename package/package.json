{
  "name": "@sourcegraph/basic-code-intel",
  "version": "6.0.2",
  "description": "Common library for providing basic code intelligence in Sourcegraph extensions",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/sourcegraph-basic-code-intel",
    "directory": "package"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "prettier": "prettier '**/*.{js?(on),ts}' --write --list-different",
    "tslint": "tslint -p tsconfig.json './src/**/*.ts'",
    "typecheck": "tsc -p tsconfig.json",
    "build": "yarn run tsc -p tsconfig.dist.json",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register --require source-map-support/register --opts mocha.opts",
    "cover": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --require ts-node/register --require source-map-support/register --all mocha --opts mocha.opts --timeout 10000",
    "watch:typecheck": "tsc -p tsconfig.json -w",
    "watch:build": "tsc -p tsconfig.dist.json -w",
    "watch:test": "npm run test -- -w",
    "sourcegraph:prepublish": "yarn run build"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts",
      "**/*.js"
    ],
    "cache": true,
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@types/lodash": "^4.14.120",
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.9.4",
    "@types/sprintf-js": "^1.1.1",
    "lnfs-cli": "^2.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.14.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "rxjs": "^6.3.3",
    "sourcegraph": "^20.1.0"
  },
  "sideEffects": false
}
