{
  "name": "sourcegraph-basic-code-intel",
  "publisher": "beyang",
  "version": "0.0.0-development",
  "title": "Basic code intelligence",
  "description": "Provides basic code intelligence for all languages using the Sourcegraph search API",
  "url": "https://storage.googleapis.com/sourcegraph-cx-dev/sourcegraph-basic-code-intel.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "Basic code intelligence settings",
      "required": [
        "basicCodeIntel.sourcegraphToken"
      ],
      "properties": {
        "basicCodeIntel.sourcegraphToken": {
          "description": "The API token for the Sourcegraph instance.",
          "type": "string"
        },
        "basicCodeIntel.definition.symbols": {
          "type": "string",
          "description": "Whether to use symbol search to complete goto definition requests. 'Local' means issue a symbol search locally and if none are found, fall back to text search globally.",
          "enum": [
            "no",
            "local",
            "yes"
          ]
        },
        "basicCodeIntel.debug.traceSearch": {
          "type": "boolean",
          "description": "Trace Sourcegraph search API requests in the console."
        }
      }
    }
  },
  "license": "MIT",
  "main": "lib/extension.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prettier": "prettier '**/*.{js?(on),ts}' --write --list-different",
    "tslint": "tslint -p tsconfig.json './src/**/*.ts'",
    "typecheck": "tsc -p tsconfig.json",
    "build": "parcel build --no-minify --detailed-report --out-file sourcegraph-basic-code-intel.js src/extension.ts",
    "serve": "parcel serve --no-hmr --out-file sourcegraph-basic-code-intel.js src/extension.ts",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register --require source-map-support/register --opts mocha.opts",
    "cover": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --require ts-node/register --require source-map-support/register --all mocha --opts mocha.opts --timeout 10000",
    "upload": "npm run build && gsutil -h 'Cache-Control:private' cp -a public-read -r dist/* gs://sourcegraph-cx-dev/",
    "clean": "rm dist/*",
    "watch:typecheck": "tsc -p tsconfig.json -w",
    "watch:build": "tsc -p tsconfig.dist.json -w",
    "watch:test": "npm run test -- -w"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts",
      "**/*.js"
    ],
    "cache": true,
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.9.4",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "sourcegraph": "^14.1.1",
    "vscode-languageserver-types": "^3.12.0"
  },
  "sideEffects": false
}
