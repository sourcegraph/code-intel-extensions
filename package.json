{
  "name": "basic-code-intel",
  "publisher": "sourcegraph",
  "version": "0.0.0-development",
  "title": "Basic code intelligence",
  "description": "Provides basic code intelligence for all languages using the Sourcegraph search API",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "actions": [
      {
        "id": "basicCodeIntel.toggle",
        "command": "updateConfiguration",
        "commandArguments": [
          [
            "basicCodeIntel.enabled"
          ],
          "${!config.basicCodeIntel.enabled}",
          null,
          "json"
        ],
        "title": "${config.basicCodeIntel.enabled && \"Disable\" || \"Enable\"} fuzzy def/ref matching",
        "category": "Basic code intel",
        "actionItem": {
          "label": "${config.basicCodeIntel.enabled && \"Hide\" || \"Show\"} fuzzy matches",
          "description": "${config.basicCodeIntel.enabled && \"Hide\" || \"Show\"} matches found using imprecise text search"
        }
      },
      {
        "id": "basicCodeIntel.toggleHover",
        "command": "updateConfiguration",
        "commandArguments": [
          [
            "basicCodeIntel.hover"
          ],
          "${!config.basicCodeIntel.hover}",
          null,
          "json"
        ],
        "title": "${config.basicCodeIntel.hover && \"Disable\" || \"Enable\"} fuzzy hovers",
        "category": "Basic code intel"
      },
      {
        "id": "basicCodeIntel.toggleSymbols",
        "command": "updateConfiguration",
        "commandArguments": [
          [
            "basicCodeIntel.definition.symbols"
          ],
          "${((config.basicCodeIntel.definition.symbols == \"local\") || (config.basicCodeIntel.definition.symbols == \"always\")) && \"never\" || \"local\"}"
        ],
        "title": "${((config.basicCodeIntel.definition.symbols == \"local\") || (config.basicCodeIntel.definition.symbols == \"always\")) && \"Disable\" || \"Enable\"} hints from ctags",
        "category": "Basic code intel"
      },
      {
        "id": "basicCodeIntel.old.togglePreciseFuzzy",
        "command": "basicCodeIntel.old.togglePreciseFuzzy",
        "title": "${config.basicCodeIntel.enabled && \"Switch to full code intelligence\" || \"Switch to basic code intelligence\"}",
        "actionItem": {
          "label": "${config.basicCodeIntel.enabled && \"Fuzzy\" || \"Precise\"}",
          "description": "${config.basicCodeIntel.enabled && \"Click to switch to precise: Use language servers for definitions and references\" || \"Click to switch to fuzzy: Use text search and ctags for definitions and references\"}"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "action": "basicCodeIntel.old.togglePreciseFuzzy",
          "when": "resource && ((clientApplication.extensionAPIVersion.major || 0) < 3)"
        }
      ],
      "commandPalette": [
        {
          "action": "basicCodeIntel.toggle",
          "when": "resource"
        },
        {
          "action": "basicCodeIntel.toggleHover",
          "when": "resource"
        },
        {
          "action": "basicCodeIntel.toggleSymbols",
          "when": "resource"
        },
        {
          "action": "basicCodeIntel.old.togglePreciseFuzzy",
          "when": "resource && ((clientApplication.extensionAPIVersion.major || 0) < 3)"
        }
      ],
      "panel/toolbar": [
        {
          "action": "basicCodeIntel.toggle",
          "when": "((panel.activeView.id == 'def') || (panel.activeView.id == 'references')) && clientApplication.extensionAPIVersion.major >= 3"
        }
      ]
    },
    "configuration": {
      "title": "Basic code intelligence settings",
      "properties": {
        "basicCodeIntel.enabled": {
          "description": "Use fuzzy text searches and ctags to provide code intelligence (definitions and references).",
          "type": "boolean",
          "default": false
        },
        "basicCodeIntel.definition.symbols": {
          "type": "string",
          "description": "Whether to use symbol search to complete goto definition requests. 'Local' means issue a symbol search locally and if none are found, fall back to text search globally.",
          "enum": [
            "never",
            "local",
            "always"
          ]
        },
        "basicCodeIntel.debug.traceSearch": {
          "type": "boolean",
          "description": "Trace Sourcegraph search API requests in the console."
        }
      }
    }
  },
  "license": "MIT",
  "main": "dist/extension.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prettier": "prettier '**/*.{js?(on),ts}' --write --list-different",
    "tslint": "tslint -p tsconfig.json './src/**/*.ts'",
    "typecheck": "tsc -p tsconfig.json",
    "build": "parcel build --no-minify --detailed-report --out-file extension.js src/extension.ts",
    "serve": "parcel serve --no-hmr --out-file extension.js src/extension.ts",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register --require source-map-support/register --opts mocha.opts",
    "cover": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' nyc --require ts-node/register --require source-map-support/register --all mocha --opts mocha.opts --timeout 10000",
    "watch:typecheck": "tsc -p tsconfig.json -w",
    "watch:build": "tsc -p tsconfig.dist.json -w",
    "watch:test": "npm run test -- -w",
    "sourcegraph:prepublish": "yarn run build"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts",
      "**/*.js"
    ],
    "cache": true,
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "browserslist": [
    "last 1 Chrome versions",
    "last 1 Firefox versions",
    "last 1 Edge versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "@types/node": "^10.9.4",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "parcel-bundler": "^1.10.0",
    "prettier": "^1.14.2",
    "source-map-support": "^0.5.9",
    "sourcegraph": "^19.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "rxjs": "^6.3.3"
  },
  "sideEffects": false
}
